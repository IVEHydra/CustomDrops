<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>me.ivehydra</groupId>
    <artifactId>CustomDrops</artifactId>
    <version>1.1</version>
    <packaging>jar</packaging>

    <name>CustomDrops</name>
    <description>Manages Drops and EXP of Blocks, Entities and Fishing.</description>

    <developers>
        <developer>
            <name>IVEHydra</name>
        </developer>
    </developers>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createDependencyReducedPom>false</createDependencyReducedPom>
                            <relocations>
                                <relocation>
                                    <pattern>com.cryptomorin.xseries</pattern>
                                    <shadedPattern>me.ivehydra.customdrops.xseries</shadedPattern>
                                </relocation>
                            </relocations>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>com/cryptomorin/xseries/XBiome*</exclude>
                                        <exclude>com/cryptomorin/xseries/XTag*</exclude>
                                        <exclude>com/cryptomorin/xseries/XItemStack*</exclude>
                                        <exclude>com/cryptomorin/xseries/XEnchantment*</exclude>
                                        <exclude>com/cryptomorin/xseries/abstractions/Material*</exclude>
                                        <exclude>com/cryptomorin/xseries/XPotion*</exclude>
                                        <exclude>com/cryptomorin/xseries/XEntity*</exclude>
                                        <exclude>com/cryptomorin/xseries/XBlock*</exclude>
                                        <exclude>com/cryptomorin/xseries/NMSExtras*</exclude>
                                        <exclude>com/cryptomorin/xseries/NoteBlockMusic*</exclude>
                                        <exclude>com/cryptomorin/xseries/particles/XParticle*</exclude>
                                        <exclude>com/cryptomorin/xseries/particles/ParticleDisplay*</exclude>
                                        <exclude>com/cryptomorin/xseries/XWorldBorder*</exclude>
                                        <exclude>com/cryptomorin/xseries/particles/Particles*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/ProfilesCore*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/PlayerUUIDs*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/PlayerProfiles*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/objects/ProfileContainer*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/objects/ProfileInputType*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/objects/Profileable*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/mojang/MinecraftClient*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/mojang/MojangAPI*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/mojang/MojangProfileCache*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/mojang/PlayerProfile*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/mojang/PlayerProfileFetcherThread*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/mojang/ProfileRequestConfiguration*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/mojang/RateLimiter*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/APIRetryException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/InvalidProfileException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/MojangAPIException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/ProfileChangeException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/UnknownPlayerException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/builder/ProfileFallback*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/builder/ProfileInstruction*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/builder/XSkull*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/InvalidProfileContainerException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/ProfileException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/exceptions/MojangAPIRetryException*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/objects/cache/CacheableProfileable*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/objects/cache/TimedCacheableProfileable*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/objects/transformer/ProfileTransformer*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/objects/transformer/TransformableProfile*</exclude>
                                        <exclude>com/cryptomorin/xseries/profiles/ProfileLogger*</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>

    <repositories>
        <repository>
            <id>spigotmc-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
        <repository>
            <id>CodeMC</id>
            <url>https://repo.codemc.org/repository/maven-public/</url>
        </repository>
        <repository>
            <id>placeholderapi</id>
            <url>https://repo.extendedclip.com/content/repositories/placeholderapi/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.15.1-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.github.cryptomorin</groupId>
            <artifactId>XSeries</artifactId>
            <version>11.2.2</version>
        </dependency>
        <dependency>
            <groupId>io.github.bananapuncher714</groupId>
            <artifactId>nbteditor</artifactId>
            <version>7.19.4</version>
        </dependency>
        <dependency>
            <groupId>me.clip</groupId>
            <artifactId>placeholderapi</artifactId>
            <version>2.11.6</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>